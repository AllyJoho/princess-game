[gd_scene format=3 uid="uid://win_screen_001"]

[sub_resource type="GDScript" id="GDScript_win"]
script/source = "extends Node2D

func _ready() -> void:
	get_tree().paused = false
	$CanvasLayer/VBoxContainer/TimeLabel.text = \"Time: \" + str(snapped(GameState.final_time, 0.01)) + \"s\"

func _on_restart_pressed() -> void:
	GameState.new_game()
	get_tree().change_scene_to_file(\"res://scenes/tower.tscn\")
"

[node name="WinScreen" type="Node2D"]
script = SubResource("GDScript_win")

